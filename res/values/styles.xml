<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <style name="AppBaseTheme2" parent="Theme.AppCompat">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="colorPrimary">@color/LightRed</item>
        <item name="colorAccent">@color/LightRed</item>
        <item name="colorPrimaryDark">@color/Grey</item>
    </style>



    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme2">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowActionBar">false</item>

    </style>

    <style name="PagerTabStripText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/LightRed</item>
    </style>
</resources>