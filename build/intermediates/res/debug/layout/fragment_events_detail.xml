<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EventsDetailFragment" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/pad1"
        android:background="@android:color/darker_gray"
        android:padding="40dp" />

    <TextView
        android:id="@+id/events_title"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:textIsSelectable="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/pad1"
        android:background="@android:color/darker_gray"
        android:padding="40dp" />

    <TextView
        android:id="@+id/events_detail"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:textIsSelectable="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/pad1"
        android:background="@android:color/darker_gray"
        android:padding="40dp" />

    <TextView
        android:id="@+id/events_location"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:textIsSelectable="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/pad1"
        android:background="@android:color/darker_gray"
        android:padding="40dp" />

    <TextView
        android:id="@+id/events_date"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:textIsSelectable="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/pad1"
        android:background="@android:color/darker_gray"
        android:padding="40dp" />

    <TextView
        android:id="@+id/events_id"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:textIsSelectable="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/pad1"
        android:background="@android:color/darker_gray"
        android:padding="40dp" />
    
     <Button
     android:layout_height="wrap_content"
     android:layout_width="wrap_content"
     android:text="@string/add_to_calendar"
     android:onClick="addEventToCalendar" />

